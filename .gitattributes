# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Explicitly declare text files
*.cs text eol=lf
*.csproj text eol=lf
*.slnx text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.editorconfig text eol=lf
*.gitignore text eol=lf
*.gitattributes text eol=lf

# Shell scripts must use LF
*.sh text eol=lf

# Batch files must use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.dll binary
*.exe binary
